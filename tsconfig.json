{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es6","es7","esnext.asyncIterable"],
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "./dist"
    },
    "exclude": [
      "node_modules"
    ],
    "include": ["./src/**/*.tsx","./src/Modules/**/*.ts"]
  }